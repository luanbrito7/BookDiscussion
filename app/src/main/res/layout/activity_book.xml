<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="411dp"
        android:layout_height="239dp"
        android:background="#c78db4"
        android:padding="20dp">

        <ImageView
            android:id="@+id/bookImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="@drawable/book_icon" />

        <TextView
            android:id="@+id/bookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/bookImage"
            android:includeFontPadding="false"
            android:text="O nome do livro"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bookAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookTitle"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/bookImage"
            android:includeFontPadding="false"
            android:text="Autor do Livro"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookAuthor"
            android:layout_marginLeft="109dp"
            android:layout_marginTop="12dp"
            android:text="Join Chat" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="411dp"
        android:layout_height="239dp"
        android:background="#FFFFFF"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        tools:layout_editor_absoluteX="0dp">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bookDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="Sinopse"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="271dp" />

        </ScrollView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="123dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/likeButton"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_below="@+id/bookAuthor"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="12dp"
            android:text="Like" />

        <Button
            android:id="@+id/addShelfButton"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_below="@+id/bookAuthor"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:text="Shelf" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_below="@+id/bookAuthor"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:text="Share" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
